@model wep_ban_hang.Areas.Admin.Models.cthoadon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title ">chỉnh sửa</h4>
            <p class="card-description"> Chỉnh sửa loại sản phẩm </p>
