@model IEnumerable<wep_ban_hang.Areas.Admin.Models.hoadon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH HÓA ĐƠN</h4>
            <p class="card-description">
                <a class="btn btn-success btn-rounded btn-fw" asp-action="Create">Thêm hóa đơn</a>
            </p>
            <ul class="navbar-nav w-100">
                <li class="nav-item w-100">
                    <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search " asp-action="Index">
                        <input type="number" class="form-control" placeholder="Tìm kiếm hóa đơn" name="searchString">
                    </form>
                </li>
            </ul>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.mahd)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.makh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ngaylap)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.diachi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.sodt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.soluong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.thanhtien)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.trangthai)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.mahd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.makh)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngaylap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.diachi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sodt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.soluong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.thanhtien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.trangthai)
                                </td>
                                <td>

                                    <a class="btn btn-outline-success btn-fw " asp-action="Edit" asp-route-id="@item.id">Edit</a> <br />
                                    <a class="btn btn-outline-info btn-fw" asp-action="Details" asp-route-id="@item.id">Details</a> <br />
                                    <a class="btn btn-outline-danger btn-fw" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

