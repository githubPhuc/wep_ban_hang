@model IEnumerable<wep_ban_hang.Areas.Admin.Models.sanpham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH SẢN PHẨM</h4>
            <p class="card-description">
                <a class="btn btn-success btn-rounded btn-fw" asp-action="Create">Thêm sản phẩm</a>
            </p>
            <ul class="navbar-nav w-100">
                <li class="nav-item w-100">
                    <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search " asp-action="Index">
                        <input type="text"  class="form-control" placeholder="Tìm kiếm sản phẩm" name="searchString">
                    </form>
                </li>
            </ul>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.hinhanh)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tensanpham)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.gia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.danhgia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.soluong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.lspham)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.nsxuat)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.trangthai)
                            </th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="~/img/sanphams/@Html.DisplayFor(modelItem => item.hinhanh)" alt="image">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tensanpham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.gia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.danhgia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.soluong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lspham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nsxuat)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.trangthai)
                            </td>
                            <td>

                                <a class="btn btn-outline-success btn-fw " asp-action="Edit" asp-route-id="@item.id">Edit</a> <br />
                                <a class="btn btn-outline-info btn-fw" asp-action="Details" asp-route-id="@item.id">Details</a> <br />
                                <a class="btn btn-outline-danger btn-fw" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>