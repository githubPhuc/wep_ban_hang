@model IEnumerable<wep_ban_hang.Areas.Admin.Models.taikhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH TÀI KHOẢN</h4>
            <p class="card-description">
                <a class="btn btn-success btn-rounded btn-fw" asp-action="Create">Thêm tài khoản</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.hinhanh) </th>
                            <th> @Html.DisplayNameFor(model => model.hoten) </th>
                            <th> @Html.DisplayNameFor(model => model.tendangnhap) </th>
                            <th> @Html.DisplayNameFor(model => model.matkhau) </th>
                            <th> @Html.DisplayNameFor(model => model.email) </th>
                            <th> @Html.DisplayNameFor(model => model.diachi) </th>
                            <th> @Html.DisplayNameFor(model => model.isadmin) </th>
                            <th> @Html.DisplayNameFor(model => model.trangthai) </th>
                            <th> Chức năng </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="py-1">
                                <img src="~/img/accounts/@Html.DisplayFor(modelItem => item.hinhanh)" alt="image">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hoten)
                            </td>
                            <td> @Html.DisplayFor(modelItem => item.tendangnhap) </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.matkhau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.diachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.isadmin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trangthai)
                            </td>

                            <td>

                                <a class="btn btn-outline-success btn-fw " asp-action="Edit" asp-route-id="@item.id">Edit</a> <br />
                                <a class="btn btn-outline-info btn-fw" asp-action="Details" asp-route-id="@item.id">Details</a> <br />
                                <a class="btn btn-outline-danger btn-fw" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                            </td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>