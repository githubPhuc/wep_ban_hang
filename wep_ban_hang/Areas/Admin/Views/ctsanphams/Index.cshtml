@model wep_ban_hang.Areas.Admin.Models.ctsanpham
@using wep_ban_hang.Areas.Admin.Models
@{
    ViewData["Title"] = "Index";
    var lst = (List<ctsanpham>)ViewData["ctsanpham"];
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">DANH SÁCH LOẠI SẢN PHẨM</h4>
            <ul class="navbar-nav w-100">
                <li class="nav-item w-100">
                    <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search " asp-action="Index">
                        <input type="text" class="form-control" placeholder="Tìm kiếm loại sản phẩm" name="searchString">
                    </form>
                </li>
            </ul>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.tenloaisanpham)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.trangthai)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in lst)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tenloaisanpham)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.trangthai)
                                </td>
                                <td>
                                    <a class="btn btn-outline-success btn-fw " asp-action="Edit" asp-route-id="@item.id">Edit</a> <br />
                                    <a class="btn btn-outline-info btn-fw" asp-action="Details" asp-route-id="@item.id">Details</a> <br />
                                    <a class="btn btn-outline-danger btn-fw" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="col-12 grid-margin stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title ">Create</h4>
            <p class="card-description"> Create accounts </p>
            <form class="forms-sample" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="tenloaisanpham" class="control-label"></label>
                    <input asp-for="tenloaisanpham" class="form-control" />
                    <span asp-validation-for="tenloaisanpham" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="trangthai" /> @Html.DisplayNameFor(model => model.trangthai)
                    </label>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary mr-2">Create</button>
                    <button class="btn btn-dark" asp-action="Index">Cancel</button>
                </div>
                <div>@(ViewBag.SizeError!=null? ViewBag.SizeError:"")</div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
