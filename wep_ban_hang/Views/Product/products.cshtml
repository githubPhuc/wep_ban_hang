@model IEnumerable<wep_ban_hang.Areas.Admin.Models.sanpham>

@{
    ViewData["Title"] = "products";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- product section -->

<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our Products
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="box">
                        <div class="img-box" style="border:none" >
                            <img src="~/img/sanphams/@Html.DisplayFor(modelItem => item.hinhanh)" alt="no image" style="width: 100%; height: 100%">
                            <a href="" class="add_cart_btn">
                                <span>
                                    Add To Cart
                                </span>
                            </a>
                        </div>
                        <div class="detail-box">
                            <h5>
                                @Html.DisplayFor(modelItem => item.tensanpham)
                            </h5>
                            <div class="product_info">
                                <h5>
                                    <span>$</span> @Html.DisplayFor(modelItem => item.gia)
                                </h5>
                                <div class="star_container">
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="btn_box">
            <a href="" class="view_more-link">
                View More
            </a>
        </div>
    </div>
</section>

<!-- end product section -->
